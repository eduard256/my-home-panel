# =============================================================================
# Home Panel - Environment Configuration
# =============================================================================
# For Coolify deployment: Copy these variables to Coolify UI (Environment Variables)
# For local development: Copy this file to .env and fill in values
# =============================================================================

# === Core ===
ENV=production                    # development | production
LOG_LEVEL=INFO                    # DEBUG | INFO | WARNING | ERROR
ENABLE_MOCK_DATA=false            # true = use mock data (for testing without real services)

# === Authentication ===
# REQUIRED: Set a secure access token for login
ACCESS_TOKEN=your-secure-access-token
# REQUIRED: Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here

# === Proxmox NAS ===
PROXMOX_NAS_IP=10.0.10.10
PROXMOX_NAS_API_URL=https://10.0.10.10:8006/api2/json
PROXMOX_NAS_API_USER=root@pam!tokenname
PROXMOX_NAS_API_TOKEN=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PROXMOX_NAS_NODE=nas

# === Proxmox Smart Home ===
PROXMOX_SMART_IP=10.0.20.10
PROXMOX_SMART_API_URL=https://10.0.20.10:8006/api2/json
PROXMOX_SMART_API_USER=root@pam!tokenname
PROXMOX_SMART_API_TOKEN=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PROXMOX_SMART_NODE=pve

# === Frigate (NVR) ===
FRIGATE_URL=http://10.0.10.3:5000

# === MQTT API ===
MQTT_API_URL=http://10.0.20.102:8081
MQTT_API_USER=admin
MQTT_API_PASSWORD=your-mqtt-password

# === Automation API ===
AUTOMATION_API_URL=http://10.0.20.102:8080
AUTOMATION_API_USER=admin
AUTOMATION_API_PASSWORD=your-automation-password

# === AI Hub (Claude Code API) ===
AI_HUB_URL=http://10.0.10.106:9876
AI_HUB_USER=admin
AI_HUB_PASSWORD=your-ai-hub-password

# === Timezone ===
TZ=Europe/Moscow

# === Metrics Collection Intervals (seconds) ===
# How often to poll for new metrics
METRICS_INTERVAL_SERVERS=10       # Server metrics (CPU, RAM, etc.)
METRICS_INTERVAL_VMS=30           # VM/CT metrics

# === Metrics Retention (seconds) ===
# How long to keep historical data at each aggregation level
METRICS_RETENTION_RAW=3600        # 1 hour - raw data points
METRICS_RETENTION_MINUTE=86400    # 1 day - 1-minute aggregates
METRICS_RETENTION_FIVE_MIN=604800 # 7 days - 5-minute aggregates
METRICS_RETENTION_THIRTY_MIN=2592000  # 30 days - 30-minute aggregates
METRICS_RETENTION_HOUR=31536000   # 1 year - hourly aggregates
